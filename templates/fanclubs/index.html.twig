{% extends 'base.html.twig' %}

{% block title %}Fanclubs{% endblock %}

{% block body %}




<section class="section">
    <div class="tile is-ancestor" >
        <div class="tile is-parent"style="flex-wrap:wrap;">

            {% for fanclub in fanclubs %}
                <div class="tile is-child is-4 notification ">
                    <article class="card">
                        <div class="card-header">
                            <div class="card-header-icon">
                            <span class="icon is-large">
                                <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                            </span>
                            </div>
                            <div class="card-header-title">
                                <h2 class="title">{{ fanclub.name }}</h2>
                                <h3 class="subtitle">{{ fanclub.series }} - {{fanclub.count}}</h3>
                            </div>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<div class="container">
<div class="field">
  <label class="label">Name</label>
  <div class="control">
    <input id="fanclubName" class="input" type="text" placeholder="The Lords of Winter">
  </div>
</div>

<div class="field">
  <label class="label">Series</label>
  <div class="control">
    <input id="seriesName" class="input" type="text" placeholder="Game of Thrones">

  </div>
</div>


<div class="field is-grouped">
  <div class="control">
    <button id="createFanclub" class="button is-link">Submit</button>
  </div>  
</div>
</div>

{% endblock %}
